@model MyLoanRequest
@{
    ViewData["Title"] = "UserLoanRequest";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<!-- Main content -->
<div class="main-content">
    <!-- Header -->
    <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
        <div class="container">
            <div class="header-body text-center mb-7">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                        <h1 class="text-white">Loan Request To Admin</h1>
                        @* <p class="text-lead text-white"> To Sign In </p>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-bottom separator-skew zindex-100">
            <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </div>
    <!-- Page content -->
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card bg-secondary border-0 mb-0">
                    <div class="card-header bg-transparent pb-5">
                                                                         
                        <div class="card-body px-lg-5 py-lg-5">
                            <div class="text-center text-muted mb-4">
                                <small> Request a Loan</small>
                            </div>
                            <form action="/Dashboard/UserLoanRequest" method="post">

                                <div class="form-group mb-3">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-money-coins"></i></span>
                                        </div>

                                        <input class="form-control" asp-for="@Model.LoanAmount" required placeholder="Enter Amount " type="number">


                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i></i></span>
                                        </div>

                                        <input class="form-control" asp-for="@Model.UserComment" required placeholder="Write Your Comment" type="text">
                                       

                                    </div>
                                </div>
                                <span asp-validation-for="@Model.UserComment" class="text-danger"></span>
                               
                                <div class="text-center">
                                    <input type="submit" class="btn btn-primary my-4" name="btnsubmit" value="Request" />
                                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary my-4" type="button">Back To Dashboard</a>

                                </div>

                            </form>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>        
    </div>
    <footer class="footer pt-0">
        <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-6">
                
            </div>
            <div class="col-lg-6">
                <ul class="nav nav-footer justify-content-center justify-content-lg-end">

                    <li>
                        <a class="nav-link scrollto" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                    </li>

                </ul>
            </div>
        </div>
    </footer>
</div>
