<!DOCTYPE html>
<html lang="en">
<head>
    

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Nithin</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Argon-assets/img/nu_10137095.png" rel="icon">
    <link href="~/flex-assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/flex-assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/flex-assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/flex-assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/flex-assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/flex-assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/flex-assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/flex-assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: FlexStart
    * Updated: Sep 18 2023 with Bootstrap v5.3.2
    * Template URL: https://bootstrapmade.com/flexstart-bootstrap-startup-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>
<body>
    
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <a href="#hero" class="logo d-flex align-items-center">
                @* <img src="~/flex-assets/img/logo.png" alt="">*@
                <span>Nithin</span>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    @if (Context.Session.GetString("SignIn") == "true")
                    {
                        @*style = "float:left;width:400px;height: 60px;"*@
                    <li> <a class="nav-link scrollto active" asp-controller="Dashboard" asp-action="Index">Dashboard </a></li>
                    }
                    else
                    {
                        <li ><a class="nav-link scrollto active" href="#hero">Home</a></li>
                    }
                    <li>
                        <a class="nav-link scrollto" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                    </li>
                    @if (Context.Session.GetString("Admin") == "True")
                    {
                        <li>
                            <a class="nav-link scrollto" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    }
                    



                    <li class="">
                        <a><span></span> <i class=""></i>       </a>
                        

                        

                        @if (Context.Session.GetString("SignIn") == "True")
                        {
                            if (Context.Session.GetString("Admin") == "True")
                            {
                            <li>
                                <a class="nav-link scrollto" asp-controller="Admin" asp-action="Index">@Context.Session.GetString("Username")</a>
                            </li>
                            }
                            else
                            {
                            <li>
                                <a class="nav-link scrollto" asp-controller="Dashboard" asp-action="Index">@Context.Session.GetString("Username")</a>
                            </li>
                            }
                            
                        <li>
                            <a class="getstarted scrollto" asp-area="" asp-controller="Users" asp-action="SignOut">Sign Out</a>
                        </li>
                        }
                        else
                        {
                        <li>
                            <a class="getstarted scrollto" asp-area="" asp-controller="Users" asp-action="SignIn">Sign In</a>
                        </li>
                        }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
