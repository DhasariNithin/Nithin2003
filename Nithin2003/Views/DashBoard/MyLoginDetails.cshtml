@model IEnumerable<UserHistory>
@{
    ViewData["Title"] = "MyLoginDetails";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!DOCTYPE html>
<html>


<body>
    <!-- ======= Sidebar ======= -->
    <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">
            <!-- Brand -->
            
            <div class="sidenav-header  align-items-center">
                <div class="sidenav-header  align-items-center">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index" type="button">
                        <img style="max-height: 60px;width:200px;" src="~/Argon-assets/img/Nithinnnnnn.png" class="navbar-brand-img" alt="...">
                    </a>
                </div>
            </div>
            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                    <!-- Nav items -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Admin") != "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Dashboard" asp-action="Index">
                                    <i class="ni ni-tv-2 text-primary"></i>
                                    <span class="nav-link-text">My Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="DashBoard" asp-action="TransferMoney">
                                    <i class="ni ni-money-coins"></i>
                                    <span class="nav-link-text">Transfer Money</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Product" asp-action="Index">
                                    <i class="ni ni-money-coins"></i>
                                    <span class="nav-link-text">Shop</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Cart" asp-action="TrackOrder">
                                    <i class="ni ni-money-coins"></i>
                                    <span class="nav-link-text">My Order Details</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="DashBoard" asp-action="UserLoanRequest">
                                    <i class="ni ni-money-coins"></i>
                                    <span class="nav-link-text">Request a Loan</span>
                                </a>

                            </li>


                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="DashBoard" asp-action="TrackLoanRequest">
                                    <i class="ni ni-money-coins"></i>
                                    <span class="nav-link-text">Track Loan Status</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Dashboard" asp-action="MyLoginDetails">
                                    <i class="ni ni-circle-08"></i>
                                    <span class="nav-link-text">My LogIn History</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Dashboard" asp-action="MytransactionHistory">
                                    <i class="ni ni-money-coins"></i>
                                    <span class="nav-link-text">My Transaction History</span>
                                </a>
                            </li>
                            @* @if (Context.Session.GetString("Manu") == "True")
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Ajax" asp-action="Index">
                                        <i class="ni ni-circle-08"></i>
                                        <span class="nav-link-text">Ajax</span>

                                    </a>
                                </li>
                                
                            } *@

                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Users" asp-action="EditDetails" asp-route-Username="@Context.Session.GetString("Username")">
                                    <i class="ni ni-circle-08"></i>
                                    <span class="nav-link-text">Edit My Profile</span>

                                </a>
                            </li>
                        }


                        @if (Context.Session.GetString("ContentEditor") == "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Users" asp-action="UsersContentEditor">
                                    <i class="ni ni-money-coins"></i>
                                    <span class="nav-link-text">Content Editor</span>
                                </a>
                            </li>

                        }
                        <li class="nav-item">
                            <a style="background-color:royalblue;color:white" class="nav-link " asp-area="" asp-controller="Users" asp-action="SignOut">
                                <i class=""></i>
                                <span class="nav-link-text">Sign Out</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </nav>
    <!-- Main content -->
    <div class="main-content" id="panel">

        <!-- Header -->
        <!-- Header -->
        <div class="header bg-primary pb-6">
            <div class="container-fluid">
                <div class="header-body">
                    <div class="row align-items-center py-4">
                        <div class="col-lg-6 col-7">
                            <h6 class="h2 text-white d-inline-block mb-0">Users LogIn</h6>
                            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                                    <li class="breadcrumb-item"><a href="#">Table</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Table</li>
                                </ol>
                            </nav>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--6">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <!-- Card header -->
                        <div class="card-header border-0">
                            <h3 class="mb-0">Users Login History</h3>
                        </div>
                        <!-- Light table -->
                        <div class="table-responsive">
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>

                                        <th>User name</th>
                                        <th> User Action</th>
                                        <th>Time</th>
                                        <th>User IP Address</th>

                                    </tr>
                                </thead>
                                @foreach (var users in Model)
                                {
                                    <tbody class="list">
                                        <tr>
                                            <td>
                                                <span class="name mb-0 text-sm">@users.UserName</span>
                                            </td>
                                            @if(users.Action == "SignIn")
                                            {
                                                <td>
                                                    <span>

                                                        <span class="status">@users.Action</span>
                                                    </span>
                                                </td>
                                            }
                                            @if (users.Action == "SignOut")
                                            {
                                                <td>
                                                    <span>

                                                        <span class="status">@users.Action</span>
                                                    </span>
                                                </td>
                                            }
                                            
                                            <td>
                                                <div>
                                                        @users.Time
                                                </div>
                                            </td>
                                            <td>
                                                <span>@users.IPAddress</span>
                                            </td>

                                        </tr>

                                    </tbody>
                                }
                            </table>
                        </div>

                    </div>
                </div>
            </div>


            <footer class="footer pt-0">
                <div class="row align-items-center justify-content-lg-between">
                    <div class="col-lg-6">
                    </div>
                    <div class="col-lg-6">
                        <ul class="nav nav-footer justify-content-center justify-content-lg-end">

                            <li>
                                <a class="nav-link scrollto" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/Argon-assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/Argon-assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Argon-assets/vendor/js-cookie/js.cookie.js"></script>
    <script src="~/Argon-assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/Argon-assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <!-- Argon JS -->
    <script src="~/Argon-assets/js/argon.js?v=1.2.0"></script>
</body>

</html>
